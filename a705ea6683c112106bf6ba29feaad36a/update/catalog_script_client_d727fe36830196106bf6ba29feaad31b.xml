    var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    // Verifica se o email está no formato correto
    if (!emailRegex.test(newValue)) {
        alert('O e-mail inserido não é válido! Use o formato: texto@email.com');
        g_form.clearValue('sys_class_email'); // Limpa o campo de email
    } else {}
}
